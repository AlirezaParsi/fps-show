<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPS Monitor Pro"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvDeviceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device: Loading..."
        android:textColor="#CCCCCC"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvFpsSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPS Support: Checking..."
        android:textColor="#CCCCCC"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnShowFps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نمایش FPS"
        android:background="#FF5722"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تنظیمات"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="این برنامه نیاز به دسترسی روت دارد"
        android:textColor="#FF5252"
        android:textSize="12sp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
