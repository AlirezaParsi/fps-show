<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPS Monitor Pro"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvDeviceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device: Loading..."
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvFpsSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPS Support: Checking..."
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnShowFps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نمایش FPS"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>

    <!-- موقتاً دکمه تنظیمات رو غیرفعال می‌کنیم -->
    <!--
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تنظیمات"
        android:backgroundTint="@color/accent_color"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>
    -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="این برنامه نیاز به دسترسی روت دارد"
        android:textColor="#FF5252"
        android:textSize="12sp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
